{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ES2015",
    "target": "es2018",
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "skipDefaultLibCheck": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
